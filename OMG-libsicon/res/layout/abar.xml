<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dip"
    android:background="@drawable/gradasi" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/bar_home"
        android:orientation="horizontal" >

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/sp_putih" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/sp_hitam" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/about_sep"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/bar_about"
        android:orientation="horizontal" >

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/sp_putih" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/sp_hitam" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/bar_about"
        style="@style/peding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="?actionBarItemBackground"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_about" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/sp_putih" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/sp_hitam" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/bar_home"
        style="@style/peding"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/bar_about"
        android:background="?actionBarItemBackground"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_home" />

    <ImageButton
        android:id="@+id/imageButton1"
        style="@style/peding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bar_about"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="?actionBarItemBackground"
        android:scaleType="centerInside"
        android:src="@drawable/ic_logo" />

</RelativeLayout>